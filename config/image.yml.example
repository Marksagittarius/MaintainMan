jpeg_quality: 80

upload:
  async: false # Upload request returns straight after image is processed by the server (saving might still fail)
  max_file_size: 10485760 # 10 MB
  max_pixels: 8000000 # 8 million pixels
  throttling:
    burst: 20
    rate: 1
    purge: 1m
    expire: 1m

cache:
  driver: local
  limit: 1073741824 # 1 GB

transformations:
  sw-corner:
    params:  w_100,h_50,c_k,g_sw
  square:
    params:  w_200,h_200
    eager:   true # Run on every upload
  watermarked:
    default: true
    params:  w_600
    texts:
    - content: "{{.Name}}@MaintainMan"
      gravity: "ne"
      x-pos:   30
      y-pos:   20
      color:   "#fff"
      font:    fonts/SourceHanSans-Regular.ttf
      size:    12
